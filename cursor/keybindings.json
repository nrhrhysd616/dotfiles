// Place your key bindings in this file to override the defaultsauto[]
[
  // 無効化設定----------------------------------------------------------------------------
  // このショートカット謎なので無効化
  {
    "key": "shift+cmd+r",
    "command": "-workbench.action.reloadWindow",
    "when": "isDevelopment"
  },
  // Search Editor(Searchからファイル形式で出力されるエディター)で検索を再実行するショートカットを無効化
  {
    "key": "shift+cmd+r",
    "command": "-rerunSearchEditorSearch",
    "when": "inSearchEditor"
  },
  // 1行選択を無効化
  {
    "key": "cmd+p",
    "command": "-expandLineSelection",
    "when": "textInputFocus"
  },
  // シンボル検索を無効化
  {
    "key": "cmd+t",
    "command": "-workbench.action.showAllSymbols"
  },
  // Command + Shift + KでのAIポップアップ無効化
  {
    "key": "shift+cmd+k",
    "command": "-aipopup.action.modal.generate",
    "when": "editorFocus"
  },
  // 既存のAI Generateを無効化
  {
    "key": "cmd+k",
    "command": "-aipopup.action.modal.generate",
    "when": "editorFocus"
  },
  // ターミナル時の既存のAI Generateを無効化
  {
    "key": "cmd+k",
    "command": "-cursorai.action.generateInTerminal",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  // 既存の新規テキストAIチャットの作成を無効化
  {
    "key": "cmd+l",
    "command": "-aichat.newchataction"
  },
  // 既存の選択エリアのGit Stagingを無効化
  {
    "key": "cmd+k alt+cmd+s",
    "command": "-git.stageSelectedRanges",
    "when": "isInDiffEditor && !operationInProgress"
  },
  // 既存の選択エリアのGit Unstagingを無効化
  {
    "key": "cmd+k cmd+n",
    "command": "-git.unstageSelectedRanges",
    "when": "isInDiffEditor && !operationInProgress"
  },
  // 有効化設定----------------------------------------------------------------------------
  // 1行選択
  {
    "key": "cmd+l",
    "command": "expandLineSelection",
    "when": "textInputFocus"
  },
  // AI Generate
  {
    "key": "cmd+g",
    "command": "aipopup.action.modal.generate",
    "when": "editorFocus"
  },
  // ターミナル時のAI Generate
  {
    "key": "cmd+g",
    "command": "cursorai.action.generateInTerminal",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  // 新規テキストAIチャットの作成
  {
    "key": "cmd+t",
    "command": "workbench.action.toggleAuxiliaryBar"
  },
  // 選択エリアのGit Staging
  {
    "key": "cmd+s cmd+s",
    "command": "git.stageSelectedRanges",
    "when": "isInDiffEditor && !operationInProgress"
  },
  // 選択エリアのGit Unstaging
  {
    "key": "cmd+shift+s cmd+shift+s",
    "command": "git.unstageSelectedRanges",
    "when": "isInDiffEditor && !operationInProgress"
  }
]
