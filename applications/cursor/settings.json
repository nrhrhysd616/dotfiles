{
  // # エディタ設定
  // ## カーソル設定
  // カーソルの点滅デザイン
  "editor.cursorBlinking": "smooth",
  // カーソル移動時のアニメーション
  "editor.cursorSmoothCaretAnimation": "off",
  // カーソルスタイル
  "editor.cursorStyle": "line",
  // カーソルを移動した際に追従してスクロールする行数
  "editor.cursorSurroundingLines": 20,
  // カーソルを移動した際に追従してスクロールするタイミング default: キーボードでの移動時のみ追従スクロール all: 常に追従スクロール
  "editor.cursorSurroundingLinesStyle": "default",
  // カーソルの幅
  "editor.cursorWidth": 2,

  // ## 検索設定
  // 検索時に上部に余白を追加するか
  "editor.find.addExtraSpaceOnTop": true,
  // 検索時に選択範囲内のテキストを自動的に検索文字列に設定するか
  "editor.find.autoFindInSelection": "never",
  // 検索時に検索窓タイプ中にカーソルを自動で移動するか
  "editor.find.cursorMoveOnType": true,
  // 検索時にグローバルなクリップボードを使用するか
  "editor.find.globalFindClipboard": true,
  // 検索ループを有効にするか
  "editor.find.loop": true,
  // 選択範囲を検索語にするか
  "editor.find.seedSearchStringFromSelection": "always",

  // ## フォント設定
  // フォントファミリー
  "editor.fontFamily": "'Fira Code', Menlo, Monaco, 'Courier New', monospace",
  // フォントの合字を有効にするか(詳細は: https://github.com/tonsky/FiraCode などで)
  "editor.fontLigatures": true,
  // フォントサイズ
  "editor.fontSize": 11.5,

  // ## フォーマット設定
  // ペースト時にフォーマットするか
  "editor.formatOnPaste": true,
  // 保存時にフォーマットするか
  "editor.formatOnSave": true,
  // 保存時にフォーマットする際のモード file: ファイル全体をフォーマットする modifications: 修正部分のみフォーマットする
  "editor.formatOnSaveMode": "file",
  // タイプ時にフォーマットするか
  "editor.formatOnType": true,

  "editor.accessibilitySupport": "off",
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingComments": "beforeWhitespace",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.colorDecoratorsActivatedOn": "click",
  "editor.colorDecoratorsLimit": 100,
  "editor.columnSelection": false,
  "editor.comments.ignoreEmptyLines": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.emptySelectionClipboard": false,
  "editor.linkedEditing": true,
  "editor.trimAutoWhitespace": false,
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "files.autoSave": "onFocusChange",
  "workbench.colorTheme": "Monokai Pro",
  "workbench.editor.decorations.colors": true,
  "workbench.iconTheme": "Monokai Pro Icons",
  "workbench.sideBar.location": "left",
  "workbench.editor.decorations.badges": true,
  "workbench.editor.enablePreview": false,
  "explorer.autoReveal": false,
  "terminal.explorerKind": "external",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorStyle": "line",
  "git.confirmSync": false,
  "git.enableCommitSigning": true,
  "git.enableSmartCommit": true,
  "git.path": "/usr/local/bin/git",
  "git-graph.date.format": "ISO Date & Time",
  "java.configuration.runtimes": [
    {
      "name": "JavaSE-11",
      "path": "/Users/nrhrhysd616/.sdkman/candidates/java/11.0.17-amzn"
    },
    {
      "name": "JavaSE-17",
      "path": "/Users/nrhrhysd616/.sdkman/candidates/java/17.0.5-amzn"
    },
    {
      "name": "JavaSE-18",
      "path": "/Users/nrhrhysd616/.sdkman/candidates/java/18.0.2-amzn",
      "default": true
    }
  ],
  "java.format.settings.url": "https://raw.githubusercontent.com/nrhrhysd616/dotfiles/main/mac/java/java-formatter-profile-nrhrhysd616-google-style.xml",
  "java.import.generatesMetadataFilesAtProjectRoot": true,
  "java.import.gradle.java.home": "/Users/nrhrhysd616/.sdkman/candidates/java/17.0.5-amzn",
  "java.jdt.ls.java.home": "/Users/nrhrhysd616/.sdkman/candidates/java/18.0.2-amzn",
  "java.referencesCodeLens.enabled": true,
  "todo-tree.general.tags": ["BUG", "FIXME", "TODO", "[ ]", "[x]"],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^\\s*(-|\\d+.))\\s*($TAGS)",
  "protoc": {
    "path": "/usr/local/bin/protoc"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "files.trimFinalNewlines": true
  },
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "yaml": true
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "github.copilot.editor.enableCodeActions": false,
  "prettier.printWidth": 100,
  "editor.minimap.enabled": true,
  "workbench.activityBar.location": "top",
  "git.autofetch": true
}
